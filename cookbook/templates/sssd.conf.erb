[certmap/<%= @domain -%>/rule_name]
matchrule = <SAN>.*EDIPI@mil
maprule = (userCertificate;binary={cert!bin})

[sssd]
domains = <%= @domain %>
services = nss, pam, sudo, ssh

[domain/<%= @domain %>]
id_provider = files
auth_provider = files
